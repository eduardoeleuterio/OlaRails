<h1>Lista de Estados</h1>
<table>
    <thead>
        <tr>
            <th>Sigla</th>
            <th>Nome</th>
        <tr>
    <thead>
    <tbody>
        <% @estados.each do |estado|%>
            <tr>
                <td><%= estado.sigla%></td>
                <td><%= estado.nome%></td>
            </tr>
             <td>
                    <%= link_to({:action => :destroy, :id => estado.id},method: :delete,
                        :confirm => "VocÃª tem certeza?") do %>
                        <%= image_tag 'https://icons.iconarchive.com/icons/awicons/vista-artistic/16/delete-icon.png' %>
                    <% end %>
                </td>
                <td>
                    <%= link_to "Editar", edit_estado_path(estado.id) %>
                </td>
                <td>
                    <%= link_to "Visualizar" ,  estado%>
                </td>
                <td>
                    <%= link_to(:action => :edit, :id => estado.id) do %>
                    <%= image_tag 'page_edit.png' %>
                    <% end %>
                </td>
        <%end%>
    </tbody>
    <div style='color:green'>
        <%= flash[:notice] %>
    </div>
    <%= link_to 'Novo Estado', new_estado_path %>
</table>